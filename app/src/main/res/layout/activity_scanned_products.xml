<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Nagłówek -->
    <TextView
        android:id="@+id/tvScannedProductsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zeskanowane produkty"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Lista zeskanowanych produktów -->
    <ListView
        android:id="@+id/lvScannedProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Przyciski dodatkowe -->

    <Button
        android:id="@+id/btnBackToScanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powrót do skanera"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btnBackToMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Powrót do menu"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/btnClearList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyczyść listę"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

</LinearLayout>
